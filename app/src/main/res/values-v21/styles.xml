<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:background">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyProgressBarStyle" parent="MyActionBar">
        <item name="android:colorPrimary">#FFFFFF</item>
        <item name="android:colorAccent">#FFFFFF</item>
    </style>
    <style name="MyActionBar" parent="AppTheme">
        <item name="android:background">#55ACEE</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="PrimaryButton" parent="AppTheme">
        <item name="android:background">#55ACEE</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MainFont">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="MainFont.Muted">
        <item name="android:textColor">#AAA</item>
    </style>
    <style name="MainFont.Muted.Small">
        <item name="android:textSize">11sp</item>
    </style>
</resources>
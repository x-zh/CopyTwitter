<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:colorBackground">#FFFFFF</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MyActionBar" parent="AppTheme">
        <item name="android:background">#55ACEE</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="PrimaryButton" parent="AppTheme">
        <item name="android:background">#55ACEE</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MainFont">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="MainFont.Strong">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MainFont.Muted">
        <item name="android:textColor">#AAA</item>
    </style>
    <style name="MainFont.Muted.Small">
        <item name="android:textSize">11sp</item>
    </style>

</resources>
